  <script>
    function checkClue2() {
      const answer = document.getElementById('clue2-answer').value;
      if (answer === '1503') {
        document.getElementById('clue2-solution').style.display = 'block';
        document.getElementById('next-clue2').style.display = 'block';
      } else {
        alert('Incorrect! Try again.');
      }
    }
  </script>

